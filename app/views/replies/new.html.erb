<%# app/views/replies/new.html.erb %>
<h1 class="text-2xl font-bold mb-4">Reply to <%= @thread.title %></h1>

<%= form_with(model: [@thread, @reply], class: "space-y-4") do |form| %>
  <% if @reply.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <ul>
        <% @reply.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", rows: 5 %>
  </div>

  <div>
    <%= form.submit "Post Reply", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>

<%# app/views/replies/_reply.html.erb %>
<div class="border-t py-2">
  <p class="text-gray-500 text-sm">Replied by <%= reply.user.email %></p>
  <p><%= reply.content %></p>
</div>